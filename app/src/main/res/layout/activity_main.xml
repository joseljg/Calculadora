<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bt_sumar5"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:text="Button"
        app:layout_constraintStart_toEndOf="@+id/bt_sumar4"
        app:layout_constraintTop_toTopOf="@+id/bt_sumar4" />

    <Button
        android:id="@+id/bt_sumar4"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:text="Button"
        app:layout_constraintStart_toStartOf="@+id/bt_sumar2"
        app:layout_constraintTop_toBottomOf="@+id/bt_sumar2" />

    <Button
        android:id="@+id/bt_sumar2"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:text="Button"
        app:layout_constraintStart_toStartOf="@+id/edt_numero2"
        app:layout_constraintTop_toBottomOf="@+id/edt_numero2" />

    <EditText
        android:id="@+id/edt_numero1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/primer_numero"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_numero2"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/segundo_numero"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="@+id/edt_numero1"
        app:layout_constraintTop_toBottomOf="@+id/edt_numero1" />

    <Button
        android:id="@+id/bt_sumar"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:text="Button"
        app:layout_constraintStart_toEndOf="@+id/bt_sumar2"
        app:layout_constraintTop_toTopOf="@+id/bt_sumar2" />

    <Button
        android:id="@+id/bt_sumar3"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:text="Button"
        app:layout_constraintStart_toEndOf="@+id/bt_sumar"
        app:layout_constraintTop_toTopOf="@+id/bt_sumar" />

</androidx.constraintlayout.widget.ConstraintLayout>